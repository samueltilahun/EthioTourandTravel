{
  "version": 2,
  "builds": [
    { "src": "/index.js", "use": "@vercel/node" },
    { "src": "../frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/api(.*)", "dest": "/index.js" },
    { "src": "/uploads/(.*)", "dest": "/server/uploads/$1" },
    { "src": "/(.*)", "dest": "../frontend/build/$1" }
  ]
}
